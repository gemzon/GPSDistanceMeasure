<Window
    x:Class="GPS_Distance.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:GPS_Distance.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <Button Click="Button_Click" Content="click" />
        <TabControl x:Name="MainTabControl" SelectedIndex="{Binding SelectedIdx}">
            <TabItem Header="Entry Form" TabIndex="0">
                <views:EntryForm />
            </TabItem>
            <TabItem Header="Result" TabIndex="1">
                <views:DistanceResults />
            </TabItem>
        </TabControl>

    </StackPanel>

</Window>
