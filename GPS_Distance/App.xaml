<Application
    x:Class="GPS_Distance.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GPS_Distance"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        
        <Style x:Key="BaseButton" TargetType="Button">
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        
        <Style x:Key="BtnRed" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="#FFD63535" />
        </Style>

        <Style
            x:Key="BtnGreen" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="#FF19A833" />
        </Style>

    </Application.Resources>

</Application>
